	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.14.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"builtin-modules": "^4.0.0",
		"esbuild": "^0.25.5",
		"obsidian": "latest",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"youtube-transcript": "^1.0.6"
	}
}